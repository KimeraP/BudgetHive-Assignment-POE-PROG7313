<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Logo -->


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logotwo" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tvCategoryHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Categories"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subtitle / label -->
    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter a new category:"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- Input for new category -->

    <!-- Add button -->
    <EditText
        android:id="@+id/etNewCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="New category name"
        android:padding="12dp" />

    <!-- List of existing categories -->
    <Button
        android:id="@+id/btnAddCategory"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:text="ADD" />

    <ListView
        android:id="@+id/lvCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1" />

</LinearLayout>
